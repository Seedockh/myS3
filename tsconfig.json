{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["esnext", "dom", "es6"],
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "outDir": ".dist"
  },
  "include": ["src", "types.d.ts"],
  "exclude": [
    ".eslintrc.js",
    ".jestrc.js",
    "babel.config.js",
    "prettier.config.js"
  ]
}
